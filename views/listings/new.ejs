<body>
    <!-- listing It is the place where the data will goes when the form will submitted. -->

      <div class="col-8 mx-auto">
        <h1 class="mt-3 mb-5">Create new Listing</h1>
  <form method="POST" action="/listings">

    <div class="d-flex align-items-center ">
      <lable for="title" class="form-label me-2" style="width:120px">Title </lable>
    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control"/>
    </div>
    <br/>

    <div class="d-flex align-items-center">
      <label for="description" class="form-label me-2" style="width:120px">Description</label>
    <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control"></textarea>
    </div>

    <br/>

    <div class="d-flex align-items-center">
      <label for="image" class="form-label me-2" style="width:120px">Image URL</label>
<input name="listing[image]" placeholder="Enter URL of image" type="text" class="form-control"/>
</div>

<br/>

<div class="d-flex">
<div class="d-flex align-items-center me-5">
  <label for="price" class="form-label me-5" >Price</label>
<input name="listing[price]" placeholder="Enter the price" class="form-control"/>
</div>

<br/>

<div class="d-flex align-items-center">
  <label for="country" class="form-label me-2">Country</label>
<input name="listing[country]" placeholder="Enter the country" type="text" class="form-control" style="width: 550px">
</div>
</div>
<br/>

<div class="d-flex align-items-center">
  <label for="location" class="form-label me-2" style="width:120px">Location</label>
<input name="listing[location]" placeholder="Enter the location" type="text" class="form-control"/>
</div>

<br/>
<button class="btn btn-primary mb-3">Add</button>
</form>
</body>
</div>

