<body>
    <div class="col-8 mx-auto">
    <h1 class="mt-3 mb-5">Edit Listing</h1>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="">
            <label for="title" class="form-label" style="width:120px">Title</label>
        <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control mb-4" required/>
        <div class="invalid-feedback">Enter valid Title</div>
        <br/>
        </div>
        <div class="">
            <label for="description" class="form-label" style="width : 120px">Description</label>
                <textarea name="listing[description]" class="form-control mb-3" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Enter sort description</div>
        </div>
 
        <div class="mt-3 mb-3">
            <b class="mt-3 mb-3">Original Listing Image</b>
            <br>
            <% if (listing.images && listing.images.length) { %>
                <% listing.images.forEach(function(img){ %>
                    <img src="<%= img.url %>" class="img-thumbnail mb-2" style="width: 300px; height: 200px; object-fit:cover;"/>
                <% }); %>
            <% } else if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" class="img-thumbnail" style="width: 300px; height : 200px;"/>
            <% } else { %>
                <p>No image available</p>
            <% } %>
        </div>

        <div class="">
            <label for="image"  class="form-label">Update New Image</label>
        <input name="listing[image]"  type="file" class="form-control mb-4" />
        <div class="invalid-feedback">Enter valid URL</div>
        </div>

        <div class="">
        <div class="">
            <label for="price" class="form-label me-5" style="width : 60px">Price</label>
        <input name="listing[price]" value="<%=listing.price%>" class="form-control mb-4 me-5" required/>
        <div class="invalid-feedback">Enter valid Price</div>
        </div>
        <div class="">
            <label for="country" class="form-label me-3"style="width:60px" >Country</label>
        <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control mb-3" style="width : 550px" required/>
        <div class="invalid-feedback">Enter valid country</div>
        </div>
        </div>
        <div class="">
            <label for="location" class="form-label" style="width:120px">Location</label>
        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control mb-4" required/>
        <div class="invalid-feedback">Enter valid location</div>
        </div>
        <br/><br/>
        <button class="btn btn-primary mb-5">Apply Changes</button>
    </form>
</body>
</div>