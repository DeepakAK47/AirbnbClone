<body>
    <div class="col-8 mx-auto">
    <h1 class="mt-3 mb-5">Edit Listing</h1>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="d-flex align-items-center">
            <label for="title" class="form-label" style="width:120px">Title</label>
        <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control mb-4"/>
        <br/>
        </div>
        <div class="d-flex align-items-center">
            <label for="description" class="form-label" style="width : 120px">Description</label>
                <textarea name="listing[description]" class="form-control mb-3"><%= listing.description %></textarea>
        </div>
        <div class="d-flex align-items-center">
            <label for="image"  class="form-label" style="width :120px">Image</label>
        <input name="listing[image]" value="<%=listing.image%>" type="text" class="form-control mb-4"/>
        </div>

        <div class="d-flex">
        <div class="d-flex align-items-center">
            <label for="price" class="form-label me-5" style="width : 60px">Price</label>
        <input name="listing[price]" value="<%=listing.price%>" class="form-control mb-4 me-5"/>
        </div>
        <div class="d-flex align-items-center">
            <label for="country" class="form-label me-3"style="width:60px" >Country</label>
        <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control mb-3" style="width : 550px"/>
        </div>
        </div>
        <div class="d-flex align-items-center">
            <label for="location" class="form-label" style="width:120px">Location</label>
        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control mb-4"/>
        </div>
        <br/><br/>
        <button class="btn btn-primary">Apply</button>
    </form>
</body>
</div>