<h1>All Listings</h1>
<div class="row row-cols-lg-3 row-cols-md-2 g-4 mb-5">
    <%for(let listing of allListings){ %>
        <a href="/listings/<%=listing._id%>" class="text-decoration-none text-dark">
    <div >
  <img src="<%=listing.image.url%>" style="height : 250px; width : 100%; object-fit : cover; " class="listing-img img-fluid-rounded rounded" alt="listing image">
    <p class="mt-2 mb-0">
        <b><%=listing.title%></b><br/>
       &#8377; <%= listing.price?.toLocaleString("en-IN") || "Not available" %>/ night
    </p>
  </div>
</a>
<%}%>
</div>


